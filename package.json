{
  "name": "bem-ts",
  "version": "0.1.0",
  "description": "BEM class names generator for TypeScript",
  "author": "Masafumi Koba <ybiquitous@gmail.com>",
  "repository": "ybiquitous/bem-ts",
  "bugs": "https://github.com/ybiquitous/bem-ts/issues",
  "homepage": "https://github.com/ybiquitous/bem-ts#readme",
  "keywords": [
    "BEM",
    "classname",
    "TypeScript"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "!*test*"
  ],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "pretest": "npm run build",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "lint:ts": "tslint --project .",
    "lint:ts:fix": "npm run lint:ts -- --fix",
    "lint:md": "markdownlint *.md",
    "lint": "npm-run-all --print-name --print-label --parallel lint:*",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "precommit": "lint-staged",
    "release": "standard-version",
    "release:dry-run": "npm run release -- --dry-run"
  },
  "devDependencies": {
    "@types/jest": "^22.1.1",
    "jest": "^22.1.4",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2",
    "ybiq": "^1.3.0"
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "git add"
    ],
    "*.md": "markdownlint"
  },
  "standard-version": {
    "message": "chore(release): new version %s",
    "scripts": {
      "postchangelog": "prepend CHANGELOG.md \"<!-- markdownlint-disable -->\n\""
    }
  }
}
